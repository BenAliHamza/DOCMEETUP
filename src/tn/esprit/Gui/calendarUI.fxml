<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Gui.CalendarUIController">
      <children>
         <VBox layoutX="20" layoutY="20" spacing="10" />
      <DateTimePicker fx:id="start" layoutX="20.0" layoutY="60.0" />
      <DateTimePicker fx:id="end" layoutX="20.0" layoutY="112.0" />
      <Button fx:id="add" layoutX="14.0" layoutY="260.0" mnemonicParsing="false" onMouseClicked="#add" text="add" />
      <Button fx:id="update" layoutX="59.0" layoutY="260.0" mnemonicParsing="false" onMouseClicked="#update" text="update" />
      <Button fx:id="delete" layoutX="132.0" layoutY="260.0" mnemonicParsing="false" onMouseClicked="#delete" text="delete" />
      <Label layoutX="21.0" layoutY="35.0" prefHeight="17.0" prefWidth="79.0" text="start" />
      <Label layoutX="20.0" layoutY="91.0" prefHeight="17.0" prefWidth="79.0" text="end" />
      <TextField fx:id="search" layoutX="365.0" layoutY="23.0" onKeyTyped="#search" promptText="search" />
         <TableView fx:id="doctv" layoutX="236.0" layoutY="60.0" onMouseClicked="#row" prefHeight="300.0" prefWidth="356.0">
             <columns>
                 <TableColumn fx:id="starttv" prefWidth="197.0" text="Heure Debut">
                     <cellValueFactory>
                         <PropertyValueFactory property="heure_debut" />
                     </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="endtv" prefWidth="158.0" text="Heure Fin">
                     <cellValueFactory>
                         <PropertyValueFactory property="heure_fin" />
                     </cellValueFactory>
                 </TableColumn>
             </columns>
         </TableView>
             <Label layoutX="50" layoutY="20" text="manage your calendar" />
      <Button layoutX="524.0" layoutY="368.0" mnemonicParsing="false" onAction="#myap" text="your calendar" />

    </children>
</AnchorPane>
