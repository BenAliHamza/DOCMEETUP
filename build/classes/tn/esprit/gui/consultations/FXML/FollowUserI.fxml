<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.consultations.controllers.FollowUserIController">
      <children>
      <VBox layoutX="7.0" layoutY="8.0" prefHeight="203.0" prefWidth="131.0" spacing="18.0">
         <children>
            <Label layoutX="10.0" layoutY="10.0" text="Date">
               <font>
                  <Font name="Baloo" size="14.0" />
               </font>
            </Label>
            <Label text="Blood pressure">
               <font>
                  <Font name="Baloo" size="14.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="44.0" text="Heart Rate">
               <font>
                  <Font name="Baloo" size="14.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="61.0" text="Temperature">
               <font>
                  <Font name="Baloo" size="14.0" />
               </font>
            </Label>
            <Label text="Weight">
               <font>
                  <Font size="14.0" />
               </font></Label>
         </children>
      </VBox>
      <VBox layoutX="138.0" layoutY="8.0" prefHeight="168.0" prefWidth="126.0" spacing="10.0">
         <children>
            <DatePicker fx:id="txDate" promptText="Choose the date" />
            <TextField fx:id="txdbp" promptText="Value of blood pressure" />
            <TextField fx:id="txheartrate" promptText="Value of heart rate" />
            <TextField fx:id="txtemp" promptText="Value of Temperature" />
            <TextField fx:id="txweight" prefHeight="41.0" prefWidth="126.0" promptText="Value of weight" />
         </children>
      </VBox>
      <TextField fx:id="filterField" layoutX="564.0" layoutY="21.0" onKeyTyped="#search" promptText="search" />
      <TableView fx:id="tvfollowup" layoutX="275.0" layoutY="55.0" onMouseClicked="#row" prefHeight="243.0" prefWidth="494.0">
        <columns>
            <TableColumn fx:id="tvdate" prefWidth="72.0" text="Date" />
          <TableColumn fx:id="tvbp" prefWidth="97.0" text="Blood pressure" />
            <TableColumn fx:id="tvheart" prefWidth="101.0" text="Heart Rate" />
            <TableColumn fx:id="tvtemp" prefWidth="104.0" text="Tempeture" />
            <TableColumn fx:id="tvweight" prefWidth="119.0" text="Weight" />
        </columns>
      </TableView>
      <Button fx:id="btnadd" layoutX="14.0" layoutY="254.0" mnemonicParsing="false" onAction="#addfollow" text="add" />
      <Button fx:id="btnupdate" layoutX="93.0" layoutY="254.0" mnemonicParsing="false" onAction="#updatefollow" text="update" />
      <Button fx:id="btndelete" layoutX="182.0" layoutY="254.0" mnemonicParsing="false" onAction="#deletefollow" text="delete" />
      <Button layoutX="667.0" layoutY="322.0" mnemonicParsing="false" onAction="#pdf" prefHeight="25.0" prefWidth="93.0" text="export to pdf" />
   </children>
</AnchorPane>
