<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="tn.esprit.gui.AnalysisController">
   
   <children>
      <VBox layoutX="7.0" layoutY="8.0" prefHeight="203.0" prefWidth="131.0" spacing="19.0">
         <children>
            <Label text="analysis name">
               
            </Label>
            <Label layoutX="10.0" layoutY="27.0" text="description">
                
            </Label>
            <Label layoutX="10.0" layoutY="10.0" text="result type">
               
            </Label>
            <Label layoutX="10.0" layoutY="44.0" text="price">
                
            </Label>
         </children>
      </VBox>
      <VBox layoutX="138.0" layoutY="8.0" prefHeight="168.0" prefWidth="126.0" spacing="10.0">
         <children>
            <TextField fx:id="txanalyname" promptText="analysis name" />
            <TextField fx:id="txdescriptionanaly" promptText="description" />
            <TextField fx:id="txresulttypeanaly" promptText="result type" />
            <TextField fx:id="txpriceanaly" prefHeight="22.0" prefWidth="126.0" promptText="insert price" />
