          <TableColumn fx:id="tvanalyname" prefWidth="121.0" text="analysis" />
            <TableColumn fx:id="tvdescriptionanaly" prefWidth="122.0" text="description" />
            <TableColumn fx:id="tvresulttypeanaly" prefWidth="149.0" text="result type" />
            <TableColumn fx:id="tvpriceanaly" prefWidth="101.0" text="price" />
        </columns>
      </TableView>
      <Button fx:id="upanaly" layoutX="98.0" layoutY="251.0" mnemonicParsing="false" onAction="#updateanaly" text="update" />
   </children>  
